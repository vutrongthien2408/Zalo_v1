<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="5dp"
              android:gravity="right|center_vertical"
              android:paddingRight="10dp">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginRight="10dp"
                  android:gravity="right"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvContent"
                  android:textColor="@color/chatTextColor"
                  android:background="@drawable/shape_right"
                  android:padding="8dp"
                  style="?android:attr/textAppearanceMedium"
                  android:text="asdfsafdasdfsadfafdfasdfsdf\nasdfasfd"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvDateSend"
                  android:textAlignment="viewEnd"
                  android:text="24/08/1995"/>
    </LinearLayout>
    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:id="@+id/imgAvatarSend"
               android:src="@mipmap/ic_launcher"/>

</LinearLayout>