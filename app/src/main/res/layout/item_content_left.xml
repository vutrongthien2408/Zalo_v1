<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              android:paddingBottom="5dp"
              android:layout_height="wrap_content">

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/imgAvatarSendLeft"
                   android:src="@mipmap/ic_launcher"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp"
                      android:gravity="center_vertical"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvContentLeft"
                      android:textColor="@color/chatTextColor"
                      android:padding="8dp"
                      android:background="@drawable/shape_left"
                      style="?android:attr/textAppearanceMedium"
                      android:text="asdfsafdasdfsadfafdfasdfsdf\nasdfasfd"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvDateSendLeft"
                      android:text="24/08/1995"/>
        </LinearLayout>

</LinearLayout>