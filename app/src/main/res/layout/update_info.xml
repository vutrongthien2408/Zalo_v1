<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:layout_marginTop="10dp"
                  android:gravity="right|center_horizontal"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Register"
                  android:layout_marginBottom="20dp"
                  style="?android:attr/textAppearanceLarge"
                  android:textColor="@color/registerText"
                  android:textAlignment="center"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">
            <ImageView android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:id="@+id/imgAvatarRegister"
                       android:src="@mipmap/ic_person_white_24dp"/>

        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="phone number"
                      android:inputType="number"
                      android:id="@+id/edtPhoneNumberRegiser"
                      android:layout_marginBottom="10dp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="userName"
                      android:id="@+id/edtUserNameRegister"
                      android:layout_marginBottom="10dp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="password"
                      android:inputType="textPassword"
                      android:id="@+id/edtPasswordRegister"
                      android:layout_marginBottom="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegister"
                android:translationZ="10dp"
                android:theme="@style/PrimaryButton"
                android:text="Register"/>
    </LinearLayout>

</LinearLayout>