<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:id="@+id/imgAvarInnewfeed"
                           android:src="@mipmap/ic_launcher"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_marginLeft="10dp"
                              android:orientation="vertical">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/tvUsernameStatus"
                              android:textColor="@color/colorPrimary"
                              style="?android:attr/textAppearanceLarge"
                              android:text="name"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="date"
                              android:id="@+id/tvPostDate"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvStatus"
                      android:layout_marginLeft="50dp"
                      style="?android:attr/textAppearanceMedium"
                      android:textColor="@color/statusText"
                      android:text="day la status"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginTop="5dp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50dp"
                       android:id="@+id/imgStatus"
                       android:src="@mipmap/ic_launcher"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="#d2d2d2">

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="horizontal">
                <ImageView android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/ic_chat_bubble_outline_black_24dp"
                           android:id="@+id/imgCmtStatus"
                           android:layout_weight="1"/>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/imgLikeStatus"
                                   android:src="@mipmap/ic_thumb_up_black_24dp"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/imgLikedStatus"
                                   android:visibility="invisible"
                                   android:src="@drawable/like"/>

                    </RelativeLayout>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/statusText"
                              android:layout_marginLeft="10dp"
                              style="?android:attr/textAppearanceMedium"
                              android:id="@+id/tvLikeStatus"
                              android:text="11"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>